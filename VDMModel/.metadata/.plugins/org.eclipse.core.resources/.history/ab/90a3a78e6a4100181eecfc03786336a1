class Controller

instance variables

-- sensor objects
sensor1: IRSensor;
sensor2: IRSensor;
sensor3: IRSensor;
sensor4: IRSensor;
sensor5: IRSensor;

-- servo objects
leftServo: Servo;
rightServo: Servo;

measureObject: Measurement;

operations

-- constructor for Controller
public Controller: IRSensor * IRSensor * IRSensor * IRSensor * IRSensor * Servo * Servo * Measurement ==> Controller
Controller(lf1, lf2, lf3, lf4, lf5, ls, rs) == (
	sensor1 := lf1;
	sensor2 := lf2;
	sensor3 := lf3;
	sensor4 := lf4;
	sensor5 := lf5;
	leftServo := ls;
	rightServo := rs
);

-- main loop
Step: () ==> ()
Step() == cycles(20) (
		PrintReadings();


);

-- debug information
PrintReadings: () ==> ()
PrintReadings() == (
    IO`printf("Readings: [%s, %s, %s, %s, %s]\n", 
      [sensor1.getReading(), 
       sensor2.getReading(), 
       sensor3.getReading(),
       sensor4.getReading(),
			 sensor5.getReading()]);
)

thread
periodic(10E6, 0, 0, 0)(Step)

end Controller