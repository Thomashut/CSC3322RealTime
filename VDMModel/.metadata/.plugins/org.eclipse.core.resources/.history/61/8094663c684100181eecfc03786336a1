class Measurement

instance variables

startReading:Encoder;
stopReading:Encoder;

-- Start and stop readings for the left encoder
leftStartMeasure:real;
leftStopMeasure:real;

-- Start and stop readings for the right encoder
rightStartMeasure:real;
rightStopMeasure:real;

operations

public Measurement: Encoder * Encoder ==> Measurement
	Measurement(en1,en2) == (
		startReading := en1;
		stopReading := en2
	);

public startReading: () ==> ()
	startReading() == (
		startMeasure := startReading.getReading();
	);

public stopReading: () ==> ()
	stopReading() == (
		stopMeasure := stopReading.getReading();
	);

public getMeasurement: () ==> real
	getMeasurement() == (
		
	)


end Measurement
