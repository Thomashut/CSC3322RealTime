class Encoder

instance variables

port : RealPort;

operations

public Encoder: RealPort * bool ==> Encoder
	Encoder(p,r) == (
		p := r;
	);
	
public getReading: () ==> real
	getReading() == (
		return port.getValue() * PI * DIAMETER / RESOLUTION;
	)

values

PI = 3.14159;
DIAMETER = 0.0665;
RESOLUTION = 44;


end Encoder